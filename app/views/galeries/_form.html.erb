<%= blad(@galeria) %>

<table class="table table-striped">
	<tr>
		<th><%= pole.label(:nazwa) %></th>
		<td><%= pole.text_field(:nazwa, :class => 'form-control') %></td>
	</tr>
	<tr>
		<th><%= pole.label(:pozycja) %></th>
		<td><%= pole.select(:pozycja, 1..@licznik, :class => 'form-control') %></td>
	</tr>
	<tr>
		<th><%= pole.label(:widoczna, "Czy jest widoczny?") %></th>
		<td><%= pole.check_box(:widoczna) %></td>
	</tr>
<% if !@galeria.zdjecie.blank? %>
	<tr>
		<th>Zdjęcie:</th>
		<td><%= image_tag(@galeria.zdjecie) %></td>
	</tr>
<% end %>	
	<tr>
		<th><%= pole.label(:zdjecie, "Zdjęcie") %></th>
		<td><%= pole.file_field(:zdjecie) %></td>
	</tr>
	<tr>
		<th><%= pole.label(:created_at, "Utworzona") %></th>
		<td><%= pole.datetime_select(:created_at, :class => 'form-control') %></td>
	</tr>
	<tr>
		<th><%= pole.label(:opis) %></th>
		<td><%= pole.text_area(:opis, :class => 'form-control') %></td>
	</tr>
</table>